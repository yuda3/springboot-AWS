{{>layout/header}}
<h1>Post Register</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="please input title">
            </div>
            <div class="form-group">
                <label for="author">author</label>
                <input type="text" class="form-control" id="author" placeholder="please input author">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" placeholder="please input Content"></textarea>
            </div>
            <form>
                <a href="/" role="button" class="btn btn-secondary">Cancel</a>
                <button type="button" class="btn btn-primary" id="btn-save">Register</button>
            </form>
        </form>
    </div>
</div>
